<!-- start: LOGIN -->
<div class="row">
    <div class="main-login col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4 col-lg-2 col-lg-offset-5">
        <div class="logo text-center">
            <img src="assets/images/logo-big.png" alt="{{app.name}}" class="img-responsive" />
        </div>
        <p class="text-center text-dark text-bold text-extra-large margin-top-15">
            Welcome to Xpresion
        </p>
        @*<p class="text-center">
            You can build just about any type of dashboard you want with Packet, a developer friendly admin theme.
        </p>
        <p class="text-center">
            Please enter your name and password to log in.
        </p>*@
        <!-- start: LOGIN BOX -->
        <div class="box-login" ng-controller="loginController">
            <form name="Form" novalidate class="form-login">
                <div class="form-group" ng-class="{'has-error':Form.userid.$dirty && Form.userid.$invalid || Form.userid.$invalid && Form.$submitted, 'has-success':Form.userid.$valid}">
                    <label class="control-label">UserId<span class="symbol required"></span></label>
                    <input type="text" class="form-control" name="userid" placeholder="Userid" ng-model="userid" required>
                    <span class="error text-small block" ng-if="Form.userid.$dirty && Form.userid.$invalid || Form.userid.$invalid && Form.$submitted">This field is required</span>
                </div>
                <div class="form-group form-actions" ng-class="{'has-error':Form.password.$dirty && Form.password.$invalid || Form.password.$invalid && Form.$submitted, 'has-success':Form.password.$valid}">
                    <label class="control-label">Password<span class="symbol required"></span></label>
                    <input type="password" class="form-control password" name="password" placeholder="Password" ng-model="password" required>
                    <span class="error text-small block" ng-if="Form.password.$dirty && Form.password.$invalid || Form.password.$invalid && Form.$submitted">This field is required</span>
                </div>
                <div class="form-actions">
                    <button type="submit" class="btn btn-red btn-block" ng-click="Form.$valid && submit()">
                        Login
                    </button>
                </div>
            </form>
            <!-- start: COPYRIGHT -->
            <div class="copyright">
                {{app.year}} &copy; {{ app.name }} by {{ app.author }}.
            </div>
            <!-- end: COPYRIGHT -->
        </div>
        <!-- end: LOGIN BOX -->
    </div>
</div>
<!-- end: LOGIN -->
<!-- Controller -->
<script src="~/Views/Xpresion/loginController.js"></script>
